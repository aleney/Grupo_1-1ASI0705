// Clase base CuentaBancaria
class CuentaBancaria {
    double saldo;

    public CuentaBancaria(double saldo) {
        this.saldo = saldo;
    }

    public void mostrarSaldo() {
        System.out.println("Saldo: " + saldo);
    }

    public void calcularInteres() {
        System.out.println("Interés base: " + saldo * 0.02); // Interés base del 2%
    }
}

// Clase CuentaCorriente que hereda de CuentaBancaria
class CuentaCorriente extends CuentaBancaria {
    public CuentaCorriente(double saldo) {
        super(saldo);
    }

    @Override
    public void calcularInteres() {
        System.out.println("Interés de cuenta corriente: " + saldo * 0.01); // 1% de interés para cuentas corrientes
    }
}

// Clase CuentaAhorros que hereda de CuentaBancaria
class CuentaAhorros extends CuentaBancaria {
    public CuentaAhorros(double saldo) {
        super(saldo);
    }

    @Override
    public void calcularInteres() {
        System.out.println("Interés de cuenta de ahorros: " + saldo * 0.05); // 5% de interés para cuentas de ahorros
    }
}

public class Main {
    public static void main(String[] args) {
        CuentaBancaria cuenta1 = new CuentaCorriente(1000);
        CuentaBancaria cuenta2 = new CuentaAhorros(1000);

        cuenta1.mostrarSaldo();
        cuenta1.calcularInteres(); // Salida: Interés de cuenta corriente: 10.0

        cuenta2.mostrarSaldo();
        cuenta2.calcularInteres(); // Salida: Interés de cuenta de ahorros: 50.0
    }
}
